<div class="padbox col-4 inline-blk js-test-thumb">
	<div class="tile">
		<div class="tile__inner">
			<div style="min-height: 120px">
				<span class="bold bigger">{{name}}</span>
				<br />
				<span class="msg big">
					{{#if desc}}{{desc}}{{else}}No description{{/if}}
				</span>
				<br />
				<div class="grid">
					<div class="col col-6 no-gutter">
						<a href="{{hostName}}institute/online-tests/save?mode=edit&id={{_id.$oid}}" class="medium">edit test</a>
						&nbsp;
						<a href="#delete-test" class="medium js-delete-test" data-test-id="{{_id.$oid}}">delete test</a>
					</div>
					<div class="col col-6 no-gutter t-right">
						<p class="msg big">
							<span class="mono">{{getQuesCount body}}</span> questions
						</p>
					</div>
				</div>
			</div>
			<hr />
			<p class="msg small upper"><span class="underline">Test timeline</span></p>
			{{#isAllFalsy aliveFrom aliveTo}}
			<p class="msg medium">N.A.</p>
			{{else}}
			<div class="grid msg medium">
				<div class="col col-5 no-gutter">{{getDateAndTime aliveFrom}}</div>
				<div class="col col-2 no-gutter center">to</div>
				<div class="col col-5 no-gutter t-right">{{getDateAndTime aliveTo}}</div>
			</div>
			{{/isAllFalsy}}
			<br />
			<p class="msg big t-right">
				<a href="{{hostName}}online-tests/reports/{{_id.$oid}}" class="medium">view reports</a>
				&nbsp;
				<a href="{{hostName}}online-tests/conduct/{{_id.$oid}}" class="medium">preview</a>
				&nbsp;
				<span class="fa fa-clock-o fa-fw"></span> {{timeDur}} mins
			</p>
		</div><!-- .tile__inner -->
	</div><!-- .tile -->
</div><!-- .padbox -->